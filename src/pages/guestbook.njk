<script>
// Guestbook functionality
document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('guestbook-form');
  const entriesContainer = document.getElementById('guestbook-entries');
  const messageInput = document.getElementById('guest-message');
  const charCount = document.querySelector('.char-count');
  
  // Character counter
  messageInput.addEventListener('input', () => {
    const length = messageInput.value.length;
    charCount.textContent = `${length}/500`;
    
    if (length > 450) {
      charCount.style.color = 'var(--hot-pink)';
    } else {
      charCount.style.color = 'var(--acid-green)';
    }
  });
  
  // Load existing entries
  function loadEntries() {
    const entries = JSON.parse(localStorage.getItem('guestbook-entries') || '[]');
    
    if (entries.length === 0) {
      entriesContainer.innerHTML = '<div class="empty-state">No entries yet. Be the first to sign! üìù</div>';
      return;
    }
    
    entriesContainer.innerHTML = entries
      .sort((a, b) => new Date(b.date) - new Date(a.date))
      .map((entry, index) => `
        <div class="guestbook-entry" data-index="${index}">
          <button class="delete-btn" onclick="deleteEntry(${index})">‚úï</button>
          <div class="entry-header">
            <div class="entry-name">
              ${entry.website 
                ? `<a href="${entry.website}" target="_blank" rel="noopener">${entry.name}</a>` 
                : entry.name
              }
            </div>
            <div class="entry-vibe">${entry.vibe}</div>
          </div>
          <div class="entry-message">${escapeHtml(entry.message)}</div>
          <div class="entry-date">${formatDate(entry.date)}</div>
        </div>
      `).join('');
  }
  
  // Add new entry
  form.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const formData = new FormData(form);
    const entry = {
      name: formData.get('name'),
      website: formData.get('website'),
      message: formData.get('message'),
      vibe: formData.get('vibe'),
      date: new Date().toISOString()
    };
    
    const entries = JSON.parse(localStorage.getItem('guestbook-entries') || '[]');
    entries.push(entry);
    localStorage.setItem('guestbook-entries', JSON.stringify(entries));
    
    form.reset();
    charCount.textContent = '0/500';
    loadEntries();
    
    // Show success message
    showNotification('‚ú® Signed! Thanks for leaving your mark!');
  });
  
  // Delete entry
  window.deleteEntry = function(index) {
    if (!confirm('Delete this entry?')) return;
    
    const entries = JSON.parse(localStorage.getItem('guestbook-entries') || '[]');
    entries.splice(index, 1);
    localStorage.setItem('guestbook-entries', JSON.stringify(entries));
    loadEntries();
  };
  
  // Helper functions
  function escapeHtml(text) {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  function formatDate(dateString) {
    const date = new Date(dateString);
    return date.toLocaleString('en-US', {
      month: 'short',
      day: 'numeric',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    });
  }
  
  function showNotification(message) {
    const notification = document.createElement('div');
    notification.style.cssText = `
      position: fixed;
      top: 20px;
      right: 20px;
      background: var(--hot-pink);
      color: #ffffff;
      padding: 15px 25px;
      border-radius: 4px;
      font-family: var(--font-pixel);
      font-size: 11px;
      box-shadow: 0 0 20px rgba(255, 0, 110, 0.8);
      z-index: 10000;
      animation: slideIn 0.3s ease;
    `;
    notification.textContent = message;
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.style.animation = 'slideOut 0.3s ease';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }
  
  // Load entries on page load
  loadEntries();
});
</script>
