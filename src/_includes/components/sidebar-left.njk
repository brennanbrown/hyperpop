<!-- Left Sidebar - Navigation & User Info -->

<!-- Navigation Menu -->
<div class="widget widget-nav">
  <div class="widget-title">NAVIGATE</div>
  <div class="widget-content">
    <nav class="sidebar-nav">
      {% for item in navigation %}
      <a href="{{ item.url }}" class="nav-button">
        <span class="nav-icon">‚ñ∏</span> {{ item.name }}
      </a>
      {% endfor %}
    </nav>
  </div>
</div>

<!-- About Widget -->
<div class="widget widget-about">
  <div class="widget-title">ABOUT</div>
  <div class="widget-content">
    <p class="widget-text">Welcome to my cyber corner of the web!</p>
    <p class="widget-text">{{ site.description }}</p>
  </div>
</div>

<!-- Hit Counter -->
<div class="widget widget-counter">
  <div class="widget-title">VISITORS</div>
  <div class="widget-content">
    <div id="hit-counter" class="hit-counter">
      <span class="counter-digit">0</span>
      <span class="counter-digit">0</span>
      <span class="counter-digit">0</span>
      <span class="counter-digit">0</span>
      <span class="counter-digit">0</span>
      <span class="counter-digit">0</span>
    </div>
    <p class="widget-text small">You are visitor #<span id="visitor-num">000000</span></p>
  </div>
</div>

