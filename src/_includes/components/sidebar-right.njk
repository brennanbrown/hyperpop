<!-- Email Me -->
<div class="widget widget-email">
  <div class="widget-content center">
    <a href="mailto:{{ site.email }}" class="email-button">
      <span class="email-icon">✉</span> EMAIL ME
    </a>
  </div>
</div>

<!-- Last Updated -->
<div class="widget widget-updated">
  <div class="widget-content center">
    <div class="last-updated">
      <div class="updated-label">LAST UPDATED:</div>
      <div class="updated-date">2025-10-11</div>
