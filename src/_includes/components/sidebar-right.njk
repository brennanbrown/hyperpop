<!-- Right Sidebar - Widgets & Extras -->

<!-- Stats Widget -->
<div class="widget widget-stats">
  <div class="widget-title">STATS</div>
  <div class="widget-content">
    <div id="stats-widget-sidebar"></div>
  </div>
</div>

<!-- Tag Cloud -->
<div class="widget widget-tags">
  <div class="widget-title">TAGS</div>
  <div class="widget-content">
    <div class="tag-cloud-mini">
      {% for tag in collections.tagList | limit(10) %}
      <a href="/tags/{{ tag }}/" class="mini-tag">{{ tag }}</a>
      {% endfor %}
    </div>
  </div>
</div>

<!-- Webring -->
<div class="widget widget-webring">
  <div class="widget-title">WEBRING</div>
  <div class="widget-content center">
    <div class="webring">
      <div class="webring-text">[ Y2K AESTHETIC WEBRING ]</div>
      <div class="webring-nav">
        <a href="#" class="webring-link">« PREV</a>
        <span class="webring-sep">|</span>
        <a href="#" class="webring-link">RANDOM</a>
        <span class="webring-sep">|</span>
        <a href="#" class="webring-link">NEXT »</a>
      </div>
    </div>
  </div>
</div>

<!-- Guestbook -->
<div class="widget widget-guestbook">
  <div class="widget-title">GUESTBOOK</div>
  <div class="widget-content">
    <p class="widget-text">Sign my guestbook!</p>
    <a href="/guestbook/" class="widget-button">SIGN HERE</a>
  </div>
</div>

